{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["es6", "ESNext", "dom"],
    "types": ["vite/client", "node"],
    "declaration": true,
    "declarationDir": "dist/types",
    "noEmit": true,
    "paths": {
      "~/*": ["./*"],
      "@/*": ["src/*"],
      "/#/*": ["types/*"]
    },
    "noImplicitAny": false, //不允许使用any
    // "strictNullChecks": true, //不允许使用null
    "noImplicitThis": false, //不允许往this上面挂属性
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "types/**/*", "scripts/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.js"],
  "ts-node": {
    "esm": true,
  }
}
